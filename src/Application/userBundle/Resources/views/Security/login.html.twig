{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}

<div class="row-fluid">
    <div class="well span5 center login-box">
        <div class="alert alert-info">
            Please login with your Username and Password.
        </div>
            {% if error %}
        <div class="alert alert-error">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
            <strong>{{ error|trans({}, 'FOSUserBundle') }}!</strong> Please try again !!
        </div>
        
{% endif %}
        <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
            <fieldset>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />


                <div class="input-prepend" title="Username" data-rel="tooltip">
                    <span class="add-on"><i class="icon-user"></i></span>
                    <input class="input-large span10" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>
                <div class="clearfix"></div>

                <div class="input-prepend" title="Password" data-rel="tooltip">
                    <span class="add-on"><i class="icon-lock"></i></span>

                    <input class="input-large span10" type="password" id="password" name="_password" required="required" />
                </div>
                <div class="clearfix"></div>
                <div class="input-prepend">
                    <label class="remember" for="remember_me">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />Remember me</label>
                </div>
                <div class="clearfix"></div>
                <p class="center span5">
                    <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                </p>


            </fieldset>
        </form>
    </div><!--/span-->
</div><!--/row-->
{% endblock fos_user_content %}
